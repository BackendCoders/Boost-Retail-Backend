        public async Task ProcessStringCategory(string fullCategory)
        {
            int cat1Id = 0;
            int cat2Id = 0;
            int cat3Id = 0;

            var cats = fullCategory.Split(',').ToList();

            // check exists
            var cata = await _db.Categories.FirstOrDefaultAsync(o => o.Name == cats[0]);

            if (cata != null)
                cat1Id = cata.Id;
            else
            {
                var cat = new Category();
                cat.Name = cats[0];

                await _db.Categories.AddAsync(cat);
                await _db.SaveChangesAsync();

                // assign id
                cat1Id = cat.Id;
            }

            if (cats.Count > 1)
            {
                // check exists
                var catb = await _db.Categories.FirstOrDefaultAsync(o => o.Name == cats[1]);

                if (catb != null)
                    cat2Id = catb.Id;
                else
                {
                    var cat = new Category();
                    cat.Name = cats[1];
                    cat.ParentId = cat1Id;

                    await _db.Categories.AddAsync(cat);
                    await _db.SaveChangesAsync();

                    // assign id
                    cat2Id = cat.Id;
                }
            }

            if (cats.Count > 2)
            {
                // check exists
                var catc = await _db.Categories.FirstOrDefaultAsync(o => o.Name == cats[2]);

                if (catc != null)
                    cat3Id = catc.Id;
                else
                {
                    var cat = new Category();
                    cat.Name = cats[2];
                    cat.ParentId = cat2Id;

                    await _db.Categories.AddAsync(cat);
                    await _db.SaveChangesAsync();

                    // assign id
                    cat3Id = cat.Id;
                }
            }
        }



