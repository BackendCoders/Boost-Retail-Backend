        public async Task<List<VatRate>> GetVatRates()
        {
            if (!await _db.VatRates.AnyAsync())
            {
                await _db.VatRates.AddAsync(new VatRate { Rate = 0 });
                await _db.VatRates.AddAsync(new VatRate { Rate = 5 });
